<div class="row">
    <div class="card card-bg-secondary shadow">
        <h1>{{ 'Match filter'|trans }}</h1>
        {{ form_start(filterForm) }}
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_row(filterForm.gender, {
                        attr: {class: 'form-control' }
                    }) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_row(filterForm.MatchPercent, {
                        attr: {class: 'form-control' }
                    }) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_row(filterForm.minAge, {
                        attr: {class: 'form-control' }
                    }) }}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_row(filterForm.maxAge, {
                        attr: {class: 'form-control' }
                    }) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_row(filterForm.budget, {
                        attr: {class: 'form-control' }
                    }) }}
                </div>
            </div>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary my-4">
                {{ 'Search'|trans }}
            </button>
        </div>
        {{ form_end(filterForm) }}
    </div>
</div>