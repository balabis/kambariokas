
        <div id="match-filter" class="card bg-secondary shadow d-none mb-7 p-3 px-md-5 ">

            {{ form_start(filterForm, {'action': path('matched'), 'method': 'POST'}) }}
            <div class="d-flex flex-wrap mb-3">
                <div class="mr-3">
                    {{ form_row(filterForm.gender, {
                        attr: {class: 'form-control' }
                    }) }}
                </div>
                <div class="mr-3">
                    {{ form_row(filterForm.budget, {
                        attr: {class: 'form-control' }
                    }) }}
                </div>

            </div>
            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-primary ">
                    {{ 'Filter'|trans }}
                </button>
                <a href="{{ path('matched') }}" class="btn btn-warning">
                    {{ 'Close filter'|trans }}
                </a>
                <a id="close-filter-btn" class="btn btn-light">
                    {{ 'Close'|trans }}
                </a>
            </div>
            {{ form_end(filterForm) }}
        </div>
