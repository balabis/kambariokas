<div class="container">
    <div class="d-flex mb-1 flex-wrap justify-content-center">
        <div class="card card-profile shadow user-match-card mx-md-2 mb-6">
            <div class="row">
                <div class="card card-bg-secondary shadow">
                    <h1>{{ 'Match filter'|trans }}</h1>
                    {{ form_start(filterForm) }}
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_row(filterForm.gender, {
                                    attr: {class: 'form-control' }
                                }) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_row(filterForm.MatchPercent, {
                                    attr: {class: 'form-control' }
                                }) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_row(filterForm.minAge, {
                                    attr: {class: 'form-control' }
                                }) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_row(filterForm.maxAge, {
                                    attr: {class: 'form-control' }
                                }) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_row(filterForm.budget, {
                                    attr: {class: 'form-control' }
                                }) }}
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary my-4">
                            {{ 'Search'|trans }}
                        </button>
                    </div>
                    {{ form_end(filterForm) }}
                </div>
            </div>
        </div>
    </div>
</div>