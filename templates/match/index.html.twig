{% extends 'main_layout.html.twig' %}

{% block title %}{{ contentName|trans }}{% endblock %}

{% block pageHeading %}{{ 'Match'|trans }}{% endblock %}

{% block mainContent %}
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header border-0">
                    <h3 class="mb-0">{{ 'Matching users'|trans }}</h3>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">

                        {% include 'match/blocks/table_head.html.twig' %}

                        <tbody>
                        {% for i in 0..userCount %}
                            {% embed 'match/blocks/table_row.html.twig' %}
                                {% block profilePictureSrc %}{{ asset('build/images/dummy.png') }}{% endblock %}
                                {% block user %}{{ usersName[i].getUsername() }}{% endblock %}
                                {% block budget %}100-150eur/mėn{% endblock %}
                                {% block region %}Žaliakalnis{% endblock %}
                                {% block matchNumber %}{{ matchesInfo[i].getCoefficient() }}{% endblock %}
                            {% endembed %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
