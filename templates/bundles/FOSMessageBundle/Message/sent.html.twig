{% extends 'bundles/FOSMessageBundle/layout.html.twig' %}

{% block fos_message_content %}
    <div class="contacts-list">
        <div class="inbox-categories">
            <div class="">
                <a href="{{ path('app.message.inbox') }}" class="active"> Inbox </a>
            </div>
            <div class="active">
                <a href="{{ path('app.message.sent') }}" class="active"> Sent </a>
            </div>
        </div>
        {% include '@FOSMessage/Message/threads_list.html.twig' with {'threads': threads} %}
    </div>
    <div class="tab-content">
        <div class="tab-pane message-body active">
            <div class="message-top">
                <a href="{{ path('app.message.new_thread') }}" class="btn btn btn-success new-message"> <i class="fa fa-envelope"></i> New Message </a>
            </div>
            {% block thread %}{% endblock %}
        </div>
    </div>
{% endblock %}
